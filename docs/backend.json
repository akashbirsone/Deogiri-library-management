
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the library, can be a student, librarian, or admin.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["student", "librarian", "admin"] },
        "avatar": { "type": "string", "format": "uri" },
        "studentId": { "type": "string" },
        "department": { "type": "string" },
        "course": { "type": "string" },
        "contactNumber": { "type": "string" },
        "yearOfStudy": { "type": "string" },
        "fines": { "type": "number" },
        "borrowHistory": { "type": "array", "items": { "$ref": "#/entities/borrowedItem" } }
      },
      "required": ["uid", "name", "email", "role"]
    },
    "book": {
      "title": "Book",
      "description": "A book within a specific subject.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "author": { "type": "string" },
        "subject": { "type": "string" },
        "isAvailable": { "type": "boolean" },
        "coverImage": { "type": "string", "format": "uri" },
        "coverImageHint": { "type": "string" },
        "addedBy": { "type": "string" },
        "addedDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "author", "subject", "isAvailable", "coverImage"]
    },
    "borrowedItem": {
      "title": "Borrowed Item",
      "description": "A record of a book borrowing transaction.",
      "type": "object",
      "properties": {
        "bookId": { "type": "string" },
        "bookPath": { "type": "string" },
        "borrowDate": { "type": "string", "format": "date-time" },
        "dueDate": { "type": "string", "format": "date-time" },
        "returnDate": { "type": "string", "format": "date-time" },
        "fine": { "type": "number" }
      },
      "required": ["bookId", "bookPath", "borrowDate", "dueDate"]
    }
  },
  "auth": {
    "providers": ["Email/Password", "Google", "GitHub"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores profile information for all users."
    },
    "/departments/{deptId}/courses/{courseId}/semesters/{semId}/subjects/{subjectId}/books/{bookId}": {
      "schema": { "$ref": "#/entities/book" },
      "description": "Stores the library's book catalog in a hierarchical structure."
    }
  }
}
